<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/achievementIcon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_achievement"
            android:contentDescription="Achievement icon" />

        <TextView
            android:id="@+id/achievementNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Budget Master"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:gravity="center" />

        <TextView
            android:id="@+id/achievementDescriptionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Stay within budget for 3 months"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
            android:gravity="center" />

        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/achievementProgressIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:progress="75" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView> 